<%= form_for @expense_history, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :creditor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :creditor_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :debtor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :debtor_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :money, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :money, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :memo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :memo, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                expense_histories_path, :class => 'btn' %>
  </div>
<% end %>
